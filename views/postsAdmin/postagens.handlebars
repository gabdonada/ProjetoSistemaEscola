<h2>Lista de Postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>


{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Slug: {{slug}}</small><br>
            <small>Data de Criação: {{data}}</small> <br>
            <small>Categoria: {{categoria.nome}}</small>

            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success" style="float: right;">Editar</button></a>
            <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger" style="float: right;">Deletar</button></a>
        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada</p>
{{/each}}